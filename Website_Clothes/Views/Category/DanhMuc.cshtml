@using Website_Clothes.Models
@model List<CATEGORY> 


<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">



            <div class="carousel-item active">
                <div class="cards-wrapper dm">
                    @{ int b = 1;
                        foreach (var item in Model)
                        {
                           

                            if (b <= 7)
                            {
                                <div class="card dm1" style="width: 139px;">

                                    <img class="card-img-top" width="139px" height="83px" src="@Url.Content("~/Picture/"+item.HinhMH)" alt="Card image cap">

                                    <div class="card-body">
                                        <h6 style="text-align:center" class="card-title">@item.TenLoai</h6>



                                    </div>
                                </div>
                            }
                            b = b + 1;
                        }
                    }


                </div>
            </div>




            <div class="carousel-item  ">
                <div class="cards-wrapper dm">

                    @{ int a = 1;
                        foreach (var item in Model)
                        {
                           

                            if (a > 7)
                            {
                                <div class="card dm1" style="width: 139px;">
                                    <img width="139px" height="83px" class="card-img-top" src="@Url.Content("~/Picture/"+item.HinhMH)" alt="Card image cap">
                                    <div class="card-body">
                                        <h6 style="text-align:center" class="card-title">@item.TenLoai</h6>
                                    </div>
                                </div>
                            }
                            a = a + 1;
                        }
                    }


                </div>
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
