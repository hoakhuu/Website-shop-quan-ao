@model IEnumerable<Website_Clothes.Models.SPShop>
@{
    
    ViewBag.Title = "SanPham";
}

@{
    <h4 style="color:brown; text-align:center">Sản phẩmm đang bán</h4>

    foreach (var i in Model)
    {
        <a  href="@Url.Action("CTSanPham","MyShop", new{ @masppp=i.Masp})">
            <div class="card sp" style="width: 195px; height:280PX; float:left;margin-left:20px; margin-top:10px">
                <div id="show5" style="padding:1px">
                    <img height="195px" width="190px" src="@Url.Content("~/Picture/"+i.Hinh1)">
                </div>
                <div class="card-body">

                    @if (i.Tensp.Length > 49)
                    {
                        <P class="card-title" style="font-size:10px;font-weight:700; text-align:left; margin:0 0">  @i.Tensp.Substring(0, 49)... </P>
                    }
                    else
                    {
                        <P class="card-title" style="font-size:10px;font-weight:700; text-align:left; margin:0 0">  @i.Tensp </P>
                    }
                    <p class="card-text bg-danger" style="float:left;color:aliceblue; font-size:13px; font-weight:900;text-align:center; width:120px">@i.Dongia </p>
                    <img style="margin-left:15px;float:left" src="~/Picture/tải xuống (4).jpg" height="15px" width="15px" />

                </div>
            </div>
        </a>

    }
    
}
<div style="clear:both"></div>
<br />