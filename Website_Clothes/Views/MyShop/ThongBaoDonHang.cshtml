
@model IEnumerable<Website_Clothes.Models.lichsumuahang>
@using Website_Clothes.Models
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutProDetail.cshtml";
    LOGIN lg = Session["lg"] as LOGIN;
    SELLER selr = Session["SL"] as SELLER;

}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 " style="background-color:#FFEFD6">

            @{

                <img height="100px" width="100px" style="border-radius:50%; margin-left:80px; margin-top:20px" src="@Url.Content("~/Picture/" + selr.AvatarSeller)" /><br />


                <p style="font-weight:700; text-align:center "> @selr.TenSeller</p>

                <p style="font-weight:700;  "><span style="color:red">Số điện thoại:</span> @selr.SDT</p>
                <p style="font-weight:700;  "><span style="color:red">Địa chỉ:</span> @selr.DiaChi</p>


            }



            <a href="@Url.Action("PersonalPage", "Account")"><p style="font-weight: 600; color: #ff6a00; text-decoration: none ">Cửa hàng</p></a>
            <a href="@Url.Action("ThongBaoDonHang","MyShop")"><p style="font-weight: 600; color: #ff6a00; text-decoration: none ">Đơn đặt hàng</p></a>

        </div>

        <div class="col-lg " style="background-color:white">
            <h6 style="color:orangered"> Đơn đặt hàng</h6>

            @{
                foreach (var item in Model)
                { <div style="float:left">
                        <img style="float:left" height="140px" width="140px" src="@Url.Content("~/Picture/"+item.Hinh)" />
                        <div style="float:left; margin-left:14px">
                            @if (@item.Tensp.Length > 36)
                            {
                                <h6 style="color:dimgrey;"> @item.Tensp.Substring(0, 33)...</h6>
                            }
                            else
                            {
                                <h6 style="color:dimgrey;"> @item.Tensp</h6>
                            }
                            <h6 style="color:red"><span style="font-weight:700; color:darkslategrey">Số lượng:</span> @item.Sl - <span style="font-weight:700; color:darkslategrey">SIZE</span> @item.Size -  <span style="font-weight:700; color:darkslategrey">Đơn giá:</span> @item.Dongia  </h6>
                            <h6 style="color:red"><span style="font-weight:700; color:darkslategrey">Thành tiền:</span> @item.Thanhtien</h6>
                        </div>
                    </div>
                    <div style="float:left;float:right; width:355px">
                        <h6 style="color:orangered"> Thông tin khách hàng</h6>
                        <p style="font-weight: 500;  "><span style="font-weight: 700; color: darkslategrey; line-height: 10px">Tên khách hàng:</span> @item.Buyer</p>
                        <p style="font-weight: 500;  "><span style="font-weight: 700; color: darkslategrey; line-height: 10px">Số điện thoại:</span> @item.Sdt</p>
                        <p style="font-weight: 500; "><span style="font-weight: 700; color: darkslategrey; line-height: 10px">Địa chỉ:</span> @item.Diachi</p>

                    </div>

                    <div style="clear:both"></div>
                    <hr />
                }

            }
            <div style="clear:both"></div>


        </div>

    </div>
    <br />

