
@using Website_Clothes.Models
@model List<PRODUCT>
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutProDetail.cshtml";
}


<div class="container" style="background-color:#ffffff">
    <div class="row">
        <div class="col-lg-7" style="background-color:white">
            @{

                foreach (var item in Model)
                {
                    @*<img style="padding:10px" height="490px" width="570px" src="@Url.Content("~/Picture/"+item.Hinh1)">*@

                    <div class="img-magnifier-container">
                        <img id="myimage" style="padding:10px" height="490px" width="570px" src="@Url.Content("~/Picture/"+item.Hinh1)">
                    </div>



                    <script>
                        // Initiate zoom effect:
                        magnify("myimage", 2);
                    </script>

                    <div class="card" style="height:140px; width:155px;float:left">
                        <img class="card-img-top" onclick="img1()" alt="Card image cap" style="padding:10px" height="140px" width="155px" src="@Url.Content("~/Picture/"+item.Hinh1)">
                    </div>
                    <div class="card" style="height: 140px; width: 155px; float: left; margin-left:30px">
                        <img class="card-img-top" onclick="img2()" alt="Card image cap" style="padding:10px" height="140px" width="155px" src="@Url.Content("~/Picture/"+item.Hinh2)">
                    </div>
                    <div class="card" style="height: 140px; width: 155px; float: left; margin-left: 30px ">
                        <img class="card-img-top" onclick="img3()" alt="Card image cap" style="padding:10px" height="140px" width="155px" src="@Url.Content("~/Picture/"+item.Hinh3)">
                    </div>


                    <script>
                    function img1()
                    {
                        document.getElementById("myimage").src="@Url.Content("~/Picture/"+item.Hinh1)"

                        }
                         function img2()
                    {
                        document.getElementById("myimage").src="@Url.Content("~/Picture/"+item.Hinh2)"

                        }
                        function img3()
                    {
                        document.getElementById("myimage").src="@Url.Content("~/Picture/"+item.Hinh3)"

                    }
                    </script>

                }

            }
        </div>

        @*----------------------------------------------------------------------------*@
    <div class="col-lg" style="background-color:#FFEFD6">

        @{
                <form action="~/GioHang/ThemGioHang" method="post">
                    @foreach (var item in Model)
                    {
                    <div style="margin-top:40px">
                        <div style="border-radius:15px;float: left; height: 30px ;border: 1px solid #ff6a00; background-color: #ff6a00; "> <p style="padding: 5px;font-size:12px;font-weight:700;text-align:center">Yêu thích</p></div>
                        <div style="padding-left:10px">
                            <p style=" font-weight:700; font-size:20px">
                                &nbsp
                                @item.TenSP

                            </p>
                        </div>
                    </div>
                    <br />

                    <p>Tình trạng: &nbsp &nbsp <span style="font-weight:700;padding: 5px; border: 1px solid #F2DEBA; background-color: #F2DEBA; border-bottom-left-radius: 20px; border-top-right-radius: 20px; ">@item.TinhTrang</span> </p>
                    <br />
                    <p style="float:left; margin-top:4px">Kích thước:&nbsp &nbsp  </p>
                        
                    <input style="display:none" value="@item.MaSP" name="idsp"/>
                    <input style="display:none" value="@Request.Url" name="link" />

                    <select name="country" id="size" style="width:160px">
                        <option value="@item.KichThuoc1">@item.KichThuoc1</option>
                        <option value="@item.KichThuoc2">@item.KichThuoc2</option>
                        <option value="@item.KichThuoc3">@item.KichThuoc3</option>
                    </select>
                    <p ></p>

                    <div style="clear:both"></div><br />
                    <p style="float:left" margin-top:4px">Số lượng:&nbsp &nbsp &nbsp  </p>
                    <div style="float:left" class="buttons_added">

                        <input id="sl" aria-label="quantity" class="input-qty" max="1000" min="0" name="slo" type="number" value="">

                    </div>
                    <div style="clear:both"></div><br />
                    <div style="height: 60px; width: 410px; border: 1px solid #3A8891; background-color: #3A8891;margin-left:15px ">
                        <p style="text-align: center; font-size: 34px; font-weight: 700; color: #F2DEBA; letter-spacing: 3px; ">@item.DonGia<span style="font-size: 25px; font-weight: 400; color: #F2DEBA; letter-spacing: 0px; ">VND</span></p>
                    </div>
                    <div style="clear:both"></div><br /><br /><br />

                    <div style="margin-left:65px">

                       <input type="submit" value="Thêm giỏ hàng" size="20" style="background-color:orangered;color:white;width:210px; height:45px" />
                        <a href="#" class="btn btn-lg active" role="button" style="margin-left:15px;background-color: #EFF5F5; height: 45px" aria-pressed="true"><p style="text-align: center; color: #EB6440">Mua Hàng</p></a>


                    </div>

                    @*</form>*@

                    }
                </form>
        }

    </div>

    </div>

    <div class="row">
        <div class="col-lg" style="background-color: #dddddd"> &nbsp </div>

    </div>

    <div class="row">
        <div style="width:870px; float:left; background-color:white">
            <br />
            <p style="font-weight:700;margin-left:20px"> MÔ TẢ SẢN PHẨM </p>

            @{
                foreach (var item in Model)
                {
                    
                    <pre style="margin-right:15px;margin-left:20px;overflow-x: auto; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word; ">
                       <br /> @item.MoTa
                    </pre>
                
                }

                    <div style="background-color:#dddddd; width:contain"> &nbsp</div>
                    <br />
                    <p style="font-weight:700;margin-left:20px"> Các sản phẩm khác</p>
                    <div style="width: 870px">
                    @Html.Action("Random10SP", "Product")
                </div>
            }

                </div>

        <div style="border-left:10px solid #dddddd">
            <p style="font-weight:700;margin-left:20px"> Gợi ý sản phẩm</p>
            @Html.Action("RandomSuggest", "Product")
            <br />
        </div>

    </div>



</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-5" style="background-color:white"> </div>
        <div class="col-lg-2"  style="background-color:white"><button type="button" class="btn btn-outline-light" style="color:#E97777">@Html.ActionLink("Xem Thêm", "InforShop", "Category")</button> </div>
        <div class="col-lg-5"  style="background-color:white"> </div>
    </div>

</div>
<br />



