@model IEnumerable<Website_Clothes.Models.BiaSP>


    @{

        foreach (var i in Model)
        {
            <a href="@Url.Action("ProductDetail","Product", new{ @masppp=i.Masp})">
                <div class="card sp" style="width: 195px; height:280PX; margin-left:40px">
                    <div id="show5" style="padding:1px">
                        <img height="195px" width="190px" src="@Url.Content("~/Picture/"+i.Hinhsp)">
                    </div>
                    <div class="card-body">

                        @if (i.Tensp.Length > 49)
                        {
                            <P class="card-title" style="font-size:10px;font-weight:700; text-align:left; margin:0 0">  @i.Tensp.Substring(0, 49)... </P>
                        }
                        else
                        {
                            <P class="card-title" style="font-size:10px;font-weight:700; text-align:left; margin:0 0">  @i.Tensp </P>
                        }
                        <p class="card-text bg-danger" style="color:aliceblue; font-size:13px; font-weight:900;text-align:center">@i.Gia</p>


                    </div>
                </div>
            </a>
        }

    }
    

