@model IEnumerable<Website_Clothes.Models.DonDatHang>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class= "container" >

    <div class= "row" >

    <div class= "col-lg " style = "background-color:white" >

    <h5 style = "margin-top:15px;color:darkslategrey; text-align:center" > Cảm ơn quý khách đã đặt hàng</h5>
    </div>
    </div>

    <div class="row">
        <div class= "col-lg-3 " style = "background-color:white" >


        <h6 style = "color:orangered" > Địa chỉ nhận hàng</h6>
        @{
            foreach (var item in Model)
            {
                <p style = "font-weight:500" ><span style = "font-weight:700; color:darkslategrey" > Tên người đặt:</span > @item.Tenbuyer </p >

                <p style = "font-weight:500" ><span style = "font-weight:700; color:darkslategrey" > Số điện thoại:</span > @item.Sdt </p >

                <p style = "font-weight:500" ><span style = "font-weight:700; color:darkslategrey" > Địa chỉ:</span > @item.Diachibuyer </p >



                break;
            }
        }


        </div >


        <div class= "col-lg " style = "background-color:white" >

        <h6 style = "color:orangered" > Sản phẩm mua</h6>

        @{
            foreach (var item in Model)
            { <div style = "float:left" >

                <img style = "float:left" height = "140px" width = "140px" src = "@Url.Content("~/Picture/" + item.Hinh)" />

                <div style = "float:left; margin-left:14px" >
                @if (@item.Tensp.Length > 36)
                {
                    <h6 style = "color:dimgrey;" > @item.Tensp.Substring(0, 33)...</h6 >
                }
                else
                {
                    <h6 style = "color:dimgrey;" > @item.Tensp </h6 >
                }
                 <h6 style = "color:red" ><span style = "font-weight:700; color:darkslategrey"> Số lượng:</span > @item.Soluong - <span style = "font-weight:700; color:darkslategrey" > Đơn giá:</span > @item.Dongia </h6 >

                </div >
                </div >

                <div style = "float:left;float:right; width:355px" >

                <h6 style = "color:orangered" > Thông tin cửa hàng </h6 >

                <p style = "font-weight: 500;  " ><span style = "font-weight: 700; color: darkslategrey; line-height: 10px" > Tên cửa hàng:</span > @item.Tenshop </p >

                <p style = "font-weight: 500;  " ><span style = "font-weight: 700; color: darkslategrey; line-height: 10px" > Số điện thoại:</span > @item.Sdtshop </p >

                <p style = "font-weight: 500; " ><span style = "font-weight: 700; color: darkslategrey; line-height: 10px" > Địa chỉ:</span > @item.Diachishop </p >


                </div >


                <div style = "clear:both" ></div >

                <hr />
            }

        }
        <div style = "clear:both" ></div >

        <a href="@Url.Action("LichSuMuaHang","GioHang")" > <h4 style = "color:orangered; margin-left:20px" > Tiếp tục mua sắm</h4></a>

    </div>


    </div>



    </div>

</body>
</html>
